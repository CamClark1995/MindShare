<div class="row">
  <div class="col-4">

  </div>
  <div class="col-4 login">
    <h2>Welcome to MindShare<br />by Cam</h2>
    <%= display_errors(@user) %>
    <%= form_for @user, url: login_path do |f| %>
      <%= render 'flash' %>

      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.submit 'Sign In', class: 'cam_button lightgreen' %>
      </div>
      <%= link_to 'Create New User', new_user_path %>
  <% end %>
  </div>
  <div class="col-4">

  </div>
</div>